{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/config.json", "src/.env"]
  }  